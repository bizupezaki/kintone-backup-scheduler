{
    "name": "kintone-backup-scheduler",
    "version": "1.0.0",
    "description": "kintoneの自動・手動バックアップ/復元を行うWindowsアプリケーション",
    "main": "electron/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder --win",
        "build:dir": "electron-builder --win --dir",
        "postinstall": "npx @electron/rebuild -f -w better-sqlite3"
    },
    "keywords": [
        "kintone",
        "backup",
        "restore",
        "electron",
        "windows"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4",
        "@electron/rebuild": "^3.5.0"
    },
    "dependencies": {
        "@kintone/rest-api-client": "^5.5.0",
        "archiver": "^6.0.1",
        "axios": "^1.6.0",
        "axios-retry": "^4.0.0",
        "better-sqlite3": "^9.2.0",
        "electron-store": "^8.1.0",
        "fs-extra": "^11.1.1",
        "unzipper": "^0.10.14",
        "winston": "^3.11.0"
    },
    "build": {
        "appId": "com.kintone.backup.scheduler",
        "productName": "kintoneBackupScheduler",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "files": [
            "electron/**/*",
            "src/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "output": "dist"
        }
    }
}
